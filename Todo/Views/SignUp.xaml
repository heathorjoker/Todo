<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Todo.Views.SignUp">
    <ContentPage.Content>
        <StackLayout BackgroundColor="ForestGreen">
        <StackLayout Margin="40,50,40,40" >
            <StackLayout Margin="0,0,0,20">
                <Entry Placeholder="Username" TextColor="#fff" PlaceholderColor="#fff"
                   x:Name="SignUpName"
                   />
                <Entry Placeholder="Email" TextColor="#fff" PlaceholderColor="#fff"
                   x:Name="SignUpEmail"
                   />
                <Entry Placeholder="Phone Number" TextColor="#fff" PlaceholderColor="#fff"
                   x:Name="SignUpPhoneNumber"
                   />
                <Entry Placeholder="Password" PlaceholderColor="#fff" TextColor="#fff"
                   x:Name="SignUpPassword"
                   IsPassword="True"/>
                <Entry Placeholder="Confirm Password" PlaceholderColor="#fff" TextColor="#fff"
                   x:Name="SignUpConfirmPassword"
                   IsPassword="True"/>
            </StackLayout>
            <Button Text="Sign Up" 
                BackgroundColor="#fff"
                TextColor="ForestGreen"
                Clicked="onSignUpButtonClicked"    
        />
        </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>